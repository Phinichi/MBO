<Window x:Class="Hanoi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Türme von Hanoi" Height="444" Width="654" MouseMove="Window_MouseMove"  MouseRightButtonUp="Window_MouseRightButtonUp" MouseRightButtonDown="Window_MouseRightButtonDown">
    <Window.Background>
        <SolidColorBrush Color="White" />
    </Window.Background>

    <Grid HorizontalAlignment="Left" Width="650" x:Name="hanoiGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="343*"/>
        </Grid.RowDefinitions>
        <Label Name="Titel" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Content="Türme von Hanoi" Margin="268,10,258,32" Grid.RowSpan="2" />
        <Canvas x:Name="LeftCanvas" AllowDrop="True" MouseLeftButtonUp="canvas_Click" Background="#FFF0F0F0" VerticalAlignment="Bottom" Margin="10,0,440,60" Height="300" Width="200" Grid.Row="1" Grid.RowSpan="2"/>
        <Canvas x:Name="MidCanvas" AllowDrop="True" MouseLeftButtonUp="canvas_Click" Background="#FFF0F0F0" VerticalAlignment="Bottom"  Margin="222,0,228,60" Height="300" Width="200" Grid.Row="1" Grid.RowSpan="2"/>
        <Canvas x:Name="RightCanvas" AllowDrop="True" MouseLeftButtonUp="canvas_Click" Background="#FFF0F0F0" VerticalAlignment="Bottom"  Margin="429,0,10,60" Height="300" Width="200" Grid.Row="1" Grid.RowSpan="2"/>
        <Slider HorizontalAlignment="Left" Margin="508,306,0,0" VerticalAlignment="Top" Width="126" Minimum="3" Value ="3" ValueChanged="Slider_ValueChanged" SmallChange="1" Cursor="" Grid.Row="2" AutoToolTipPlacement="TopLeft" TickPlacement="TopLeft"/>
        <Label Content="Anzahl Scheiben:" HorizontalAlignment="Left" Margin="402,302,0,0" VerticalAlignment="Top" Grid.Row="2"/>
        <Button x:Name="ButtonReset" Content="Reset" Click="button_Reset_Click" IsEnabled="True" Visibility="Visible" Margin="10,287,537,10" Grid.Row="2" />
        <Button x:Name="ButtonSolve" Content="Solve" Click="button_Solve_Click" IsEnabled="True" Visibility="Visible" Margin="137,288,410,9" Grid.Row="2" />
    </Grid>



</Window>
